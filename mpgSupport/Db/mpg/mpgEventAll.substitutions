	{$(DEVICE) , TS3_30_ , 32 ,13023      , 0        , $(SPEED) }
	{$(DEVICE) , TS4_30_ , 42 ,13024      , 0        , $(SPEED) }
	{$(DEVICE) , TS5_30_ , 52 ,13025      , 0        , $(SPEED) }
	{$(DEVICE) , TS6_30_ , 62 ,13026      , 0        , $(SPEED) }
#    10Hz
	{$(DEVICE) , TS1_10_ , 13 ,13031      , 0        , $(SPEED) }
	{$(DEVICE) , TS2_10_ , 23 ,13032      , 0        , $(SPEED) }
	{$(DEVICE) , TS3_10_ , 33 ,13033      , 0        , $(SPEED) }
