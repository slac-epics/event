	{$(DEVICE) , LCLSTBD7, 157,11917      , 0        , $(SPEED) }
# Beam-Independent Time Slot Triggers
#   360Hz
	{$(DEVICE) , TSX_360_ , 9 ,12950      , 1        , $(SPEED) }
#   Modulo36 base event code
	{$(DEVICE) , TSXMOD36 ,201,13000      , 1        , $(SPEED) }
#   120Hz
	{$(DEVICE) , TS1_120_, 10 ,13001      , 0        , $(SPEED) }
	{$(DEVICE) , TS2_120_, 20 ,13002      , 0        , $(SPEED) }
	{$(DEVICE) , TS3_120_, 30 ,13003      , 0        , $(SPEED) }
