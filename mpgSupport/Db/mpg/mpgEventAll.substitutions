#==============================================================================
#
# Abs:  MPG Pattern and Event Records
#
# Name: mpgEventAll.substitutions
#
# Note: Signal names must be all uppercase and 12 chars or less to follow
#       LCLS naming conventions.
#
#==============================================================================
#
file mpgPatternProc.db
{
#
#        Location
pattern { DEV      , ELOCA , CHECK     , SEND     ,   FLNK   }
        {$(DEVICE) ,$(SYSI), $(CHECKI) , $(SENDI) , $(FLNKI) }
}
file mpgEvent.db
{
#                            Event  Delay in    Send Every
#	 Location            Code   Clock Ticks Cycle
pattern { DEV      , NAME    , ID , DELY      , ALWAYS   ,   CONV   }
	{$(DEVICE) , LCLSBEAM, 140,11900      , 0        , $(SPEED) }
# Beam-Independent Time Slot Triggers
#   360Hz
	{$(DEVICE) , TSX_360_ , 9 ,12950      , 1        , $(SPEED) }
#   120Hz
	{$(DEVICE) , TS1_120_, 10 ,13001      , 0        , $(SPEED) }
	{$(DEVICE) , TS2_120_, 20 ,13002      , 0        , $(SPEED) }
	{$(DEVICE) , TS3_120_, 30 ,13003      , 0        , $(SPEED) }
	{$(DEVICE) , TS4_120_, 40 ,13004      , 0        , $(SPEED) }
	{$(DEVICE) , TS5_120_, 50 ,13005      , 0        , $(SPEED) }
	{$(DEVICE) , TS6_120_, 60 ,13006      , 0        , $(SPEED) }
#    60Hz
	{$(DEVICE) , TS1_60_ , 11 ,13011      , 0        , $(SPEED) }
	{$(DEVICE) , TS2_60_ , 21 ,13012      , 0        , $(SPEED) }
	{$(DEVICE) , TS3_60_ , 31 ,13013      , 0        , $(SPEED) }
	{$(DEVICE) , TS4_60_ , 41 ,13014      , 0        , $(SPEED) }
