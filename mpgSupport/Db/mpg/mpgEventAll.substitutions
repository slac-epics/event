#==============================================================================
#
# Abs:  MPG Pattern and Event Records
#
# Name: mpgEventAll.substitutions
#
# Note: Signal names must be all uppercase and 12 chars or less to follow
#       LCLS naming conventions.
#
#==============================================================================
#
file mpgPatternProc.db
{
#
#        Location
pattern { DEV      , ELOCA , CHECK     , SEND     }
        {$(DEVICE) ,$(SYSI), $(CHECKI) , $(SENDI) }
}
file mpgEvent.db
{
#                            Event  Delay in    Send Every
#	 Location            Code   Clock Ticks Cycle
pattern { DEV      , NAME    , ID , DELY      , ALWAYS   ,   CONV   }
	{$(DEVICE) , LCLSBEAM, 140,11900      , 0        , $(SPEED) }
	{$(DEVICE) , LCLS_60_, 141,11901      , 0        , $(SPEED) }
	{$(DEVICE) , LCLS_30_, 142,11902      , 0        , $(SPEED) }
	{$(DEVICE) , LCLS_10_, 143,11903      , 0        , $(SPEED) }
	{$(DEVICE) , LCLS_5_ , 144,11904      , 0        , $(SPEED) }
	{$(DEVICE) , LCLS_1_ , 145,11905      , 0        , $(SPEED) }
	{$(DEVICE) , LCLSHALF, 146,11906      , 0        , $(SPEED) }
	{$(DEVICE) , LCLS_N-1, 147,11907      , 0        , $(SPEED) }
	{$(DEVICE) , LCLS_N-2, 148,11908      , 0        , $(SPEED) }
# LCLS TBD Event Codes
	{$(DEVICE) , LCLSTBD1, 151,11911      , 0        , $(SPEED) }
	{$(DEVICE) , LCLSTBD2, 152,11912      , 0        , $(SPEED) }
	{$(DEVICE) , LCLSTBD3, 153,11913      , 0        , $(SPEED) }
	{$(DEVICE) , LCLSTBD4, 154,11914      , 0        , $(SPEED) }
