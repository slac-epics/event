record(event, "$(DEV):$(NAME)EV") {
  field(DESC, "$(NAME) Event")
  field(DTYP, "MRF Event Receiver")
  field(INP, "#C0 S$(ID) @")
  field(SCAN, "I/O Intr")
  field(PRIO, "HIGH")
  field(VAL, "$(ID)")
  field(FLNK, "$(DEV):$(NAME)CNT")
}

record(sub, "$(DEV):$(NAME)CNT") {
  field(DESC, "$(NAME) Event Counter")
  field(SNAM, "evrPatternCount")
  field(BRSV, "INVALID")
  field(FLNK, "$(FLNK)")
}

record(sub, "$(DEV):$(NAME)RATE") {
  field(DESC, "$(NAME) Event Rate")
  field(SNAM, "evrPatternRate")
  field(BRSV, "INVALID")
  field(SCAN, "Event")
  field(EVNT, "121")
  field(INPA, "$(DEV):$(NAME)CNT")
  field(INPD, "$(DELY)")
  field(INPE, "$(ID)")
  field(EGU,  "Hz")
  field(PREC, "1")
  field(HOPR, "360")
}
