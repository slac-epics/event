# See beam.substitutions for details

record(event, "$(IOC):BEAMEVENT") {
  field(DESC, "LCLSBEAM Event")
  field(DTYP, "MRF Event Receiver")
  field(INP, "#C$(CARD) S140 @")
  field(SCAN, "I/O Intr")
  field(PRIO, "HIGH")
  field(VAL, "140")
  field(FLNK, "$(IOC):BEAMCOUNT")
}

record(longSub, "$(IOC):BEAMCOUNT") {
  field(DESC, "Beam Event Counter")
  field(SNAM, "evrTimeEvent")
  field(BRSV, "INVALID")
  field(INPA, "140")
}

record(sub, "$(IOC):BEAMRATE") {
  field(DESC, "Beam Event Rate")
  field(SNAM, "evrTimeRate")
  field(BRSV, "INVALID")
  field(SCAN, "Event")
  field(EVNT, "121")
  field(PRIO, "LOW")
  field(INPE, "140")
  field(EGU,  "Hz")
  field(PREC, "1")
}
