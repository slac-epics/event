# ESIM Pattern records (from EVG) to EVR:
file evrPatternTest.template {
  pattern { DEVICE  }
  pattern { EIOC  ,  DEVICE }
	  { IOC:XX04:1  ,ESIM:XX04:1  }
}

# EVG EDEF checking simulation for Modifier5/ bsa enable/disable:
file bsaProcTest.template {
  pattern {  DEVICE    , LOC     }
	      { ESIM:XX04:1, SYS0    }
}
