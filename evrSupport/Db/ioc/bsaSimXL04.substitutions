# Simulation files :
file bsaBPMSTest.template {
  pattern { EIOC  , DEVICE  }
	  { IOC:XX04:1  ,BPMS:XX04:1  }
	  { IOC:XX04:1  ,BPMS:XX04:2  }
	  { IOC:XX04:1  ,BPMS:XX04:3  }
	  { IOC:XX04:1  ,BPMS:XX04:4  }
	  { IOC:XX04:1  ,BPMS:XX04:5  }
	  { IOC:XX04:1  ,BPMS:XX04:6  }
}
file bsaTOROTest.template {
  pattern { EIOC  ,  DEVICE }
	  { IOC:XX04:1  ,TORO:XX04:1  }
	  { IOC:XX04:1  ,TORO:XX04:2  }
}
file bsaPMTTest.template {
