  pattern {DEVICE    , LOC  ,  UN  , SYS  }
	  { WIRE:LI21:BL285, LI21 , WS01 , SYS0 }
	  { WIRE:LI21:BL293, LI21 , WS01 , SYS0 }
	  { WIRE:LI21:BL301, LI21 , WS01 , SYS0 }

}
