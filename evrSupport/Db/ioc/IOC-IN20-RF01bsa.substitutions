# BSA records
#
# One per IOC:

file bsaEdefShadow.db {
  pattern { DEVICE       , SYSI }
          { IOC:IN20:RF01, SYS0 } 
}

# One per device:
# Please check the HOPR,LOPR,PREC,ADEL,MDEL values provided in bsaPHASEdef.db!
file bsaPHASEdef.db {
#      Device               ,loc'n , IOC  , system, Attribute
  pattern {DEVICE           , LOC  ,  UN  , SYS   , ATRB  }
	  { LLRF:IN20:1         , IN20 , RF01 , SYS0  , REF_P }
	  { LASR:IN20:1         , IN20 , RF01 , SYS0  , P     }
	  { GUN:IN20:1          , IN20 , RF01 , SYS0  , RF_P  }
	  { GUN:IN20:2          , IN20 , RF01 , SYS0  , RF_P  }
	  { ACCL:IN20:300       , IN20 , RF01 , SYS0  , L0A_P }
	  { ACCL:IN20:400       , IN20 , RF01 , SYS0  , LOB_P }
	  { TCAV:IN20:490       , IN20 , RF01 , SYS0  , P     }
	  { PHAS:IN20:365       , IN20 , RF01 , SYS0  , P     }
}
# One per device:
# Please check the HOPR,LOPR,PREC,ADEL,MDEL values provided in bsaAMPLEdef.db!
file bsaAMPLEdef.db {
