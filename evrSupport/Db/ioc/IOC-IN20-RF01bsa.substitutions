  pattern {DEVICE           , LOC  ,  UN  , SYS   , ATRB  }
	  { LLRF:IN20:1         , IN20 , RF01 , SYS0  , REF_A }
	  { LASR:IN20:1         , IN20 , RF01 , SYS0  , A     }
	  { GUN:IN20:1          , IN20 , RF01 , SYS0  , RF_A  }
	  { GUN:IN20:2          , IN20 , RF01 , SYS0  , RF_A  }
	  { ACCL:IN20:300       , IN20 , RF01 , SYS0  , L0A_A }
	  { ACCL:IN20:400       , IN20 , RF01 , SYS0  , LOB_A }
	  { TCAV:IN20:490       , IN20 , RF01 , SYS0  , A     }
	  { PHAS:IN20:365       , IN20 , RF01 , SYS0  , A     }
