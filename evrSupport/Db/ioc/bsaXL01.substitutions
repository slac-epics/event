#####################
# BSA functionality for devices
# load these for sim or real data
####################
file bsaBPMSEdef.template {
  pattern {DEVICE  , IOCI , EVRI}
	  { BPMS:XX01:1, SYS0 , IOC:XX01:1}
	  { BPMS:XX01:2, SYS0 , IOC:XX01:1}
	  { BPMS:XX01:3, SYS0 , IOC:XX01:1}
	  { BPMS:XX01:4, SYS0 , IOC:XX01:1}
	  { BPMS:XX01:5, SYS0 , IOC:XX01:1}
	  { BPMS:XX01:6, SYS0 , IOC:XX01:1}
}

