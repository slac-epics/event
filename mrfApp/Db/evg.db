record(eg, "EVG:$(LOCA):$(UNIT):CTRL") {
  field(DESC, "EVG $(UNIT) Control")
  field(PINI, "YES")
  field(DTYP, "MRF Event Generator")
  field(OUT, "#C$(CARD) S0 @")
  field(MOD1, "Alternate")
# If it's Off, can anything really happen?
  field(R1SP, "0")
  field(MOD2, "Off")
  field(R2SP, "0")
  field(FIFO, "NO")
  field(ENAB, "YES")
  field(ETE0, "YES")
  field(ET0, "0x7c")
  field(ETE1, "NO")
#field(ET1, "Ox0")
  field(ETE2, "NO")
  field(ET2, "0x0")
  field(ETE3, "NO")
  field(ET3, "0x0")
  field(ETE4, "NO")
  field(ET4, "0x0")
  field(ETE5, "NO")
  field(ET5, "0x0")
  field(ETE6, "NO")
  field(ET6, "0x0")
  field(ETE7, "NO")
  field(ET7, "0x0")
}

